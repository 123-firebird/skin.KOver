<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- yesnodialog -->
	<defaultcontrol always="true">10</defaultcontrol>
	<onload>Skin.ToggleSetting(DebugInfo)</onload>	
	<onload condition="IsEmpty(Window(Home).Property(DialogVisibility))">SetProperty(DialogVisibility,$INFO[Window.Property(xmlfile)],Home)</onload>
	<onload condition="!IsEmpty(Window(Home).Property(DialogVisibility)) + IsEmpty(Window(Home).Property(DialogVisibility2))">SetProperty(DialogVisibility2,$INFO[Window.Property(xmlfile)],Home)</onload>
	<onload condition="!IsEmpty(Window(Home).Property(DialogVisibility2)) + IsEmpty(Window(Home).Property(DialogVisibility3))">SetProperty(DialogVisibility3,$INFO[Window.Property(xmlfile)],Home)</onload>
	<onload condition="!IsEmpty(Window(Home).Property(DialogVisibility3)) + IsEmpty(Window(Home).Property(DialogVisibility4))">SetProperty(DialogVisibility4,$INFO[Window.Property(xmlfile)],Home)</onload>
	<onload condition="!IsEmpty(Window(Home).Property(DialogVisibility4)) + IsEmpty(Window(Home).Property(DialogVisibility5))">SetProperty(DialogVisibility5,$INFO[Window.Property(xmlfile)],Home)</onload>
	<onunload condition="IsEmpty(Window(Home).Property(DialogVisibility2))">ClearProperty(DialogVisibility,Home)</onunload>
	<onunload condition="IsEmpty(Window(Home).Property(DialogVisibility3))">ClearProperty(DialogVisibility2,Home)</onunload>
	<onunload condition="IsEmpty(Window(Home).Property(DialogVisibility4))">ClearProperty(DialogVisibility3,Home)</onunload>
	<onunload condition="IsEmpty(Window(Home).Property(DialogVisibility5))">ClearProperty(DialogVisibility4,Home)</onunload>
	<onunload>ClearProperty(DialogVisibility5,Home)</onunload>
	<onunload condition="Window.IsVisible(startup)">ReplaceWindow(home)</onunload>
	
	<controls>
		
		<control type="group">
			<visible>[StringCompare(Window(Home).Property(DialogVisibility),Window.Property(xmlfile)) + IsEmpty(Window(Home).Property(DialogVisibility2))] | 
					[StringCompare(Window(Home).Property(DialogVisibility2),Window.Property(xmlfile)) + IsEmpty(Window(Home).Property(DialogVisibility3))] |
					[StringCompare(Window(Home).Property(DialogVisibility3),Window.Property(xmlfile)) + IsEmpty(Window(Home).Property(DialogVisibility4))] |
					[StringCompare(Window(Home).Property(DialogVisibility4),Window.Property(xmlfile)) + IsEmpty(Window(Home).Property(DialogVisibility5))] |
					StringCompare(Window(Home).Property(DialogVisibility5),Window.Property(xmlfile)) + !IsEmpty(Skin.String(KOverInit))</visible>
					
			<include condition="!Window.Previous(startup)" name="DialogPOS">
				<param name="DialogName" value="DiaYesNo" />
			</include>							

		</control>
		
		<control type="group">
			<visible>Window.Previous(startup)</visible>
			
			<!-- Background -->
			<control type="image">
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<colordiffuse>$VAR[InitColor1]</colordiffuse>
				<texture background="true">common/white.png</texture>
				<visible>true</visible>
			</control>			

			<!-- Logo -->
			<control type="image">
				<left>324</left>
				<top>334</top>
				<width>356</width>
				<height>356</height>
				<colordiffuse>$VAR[InitColor2]</colordiffuse>
				<texture>common/kodi.png</texture>
				<aspectratio aligny="center">keep</aspectratio>
			</control>			
			<control type="image">
				<left>476</left>
				<top>334</top>
				<width>356</width>
				<height>356</height>
				<colordiffuse>$VAR[InitColor3]</colordiffuse>
				<texture>common/kover.png</texture>
				<aspectratio aligny="center">keep</aspectratio>
			</control>			
			<control type="label">
				<left>550</left>
				<top>490</top>
				<width>499</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>Font60R</font>
				<textcolor>$VAR[InitColor4]</textcolor>
				<label>Over</label>
				<animation effect="rotate" start="0" end="45" time="0" center="560,500" condition="true">Conditional</animation>
			</control>			

			<control type="label" id="1">
				<left>860</left>
				<top>382</top>
				<width>499</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>Font60</font>
				<textcolor>$VAR[InitColor5]</textcolor>
				<animation effect="fade" start="0" end="100" time="200" condition="true">Conditional</animation>			
			</control>			

			<control type="label" id="9">
				<left>860</left>
				<top>432</top>
				<width>499</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>Font27</font>
				<textcolor>$VAR[InitColor2]</textcolor>
				<label>20186</label>
				<animation effect="fade" start="0" end="100" time="200" condition="true">Conditional</animation>			
			</control>					

			<!-- Button grouplist -->
			<control type="grouplist">
				<left>860</left>
				<top>490</top>
				<width>588</width>
				<height>70</height>
				<itemgap>1</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>

				<!-- YES -->
				<control type="button" id="10">
					<top>0</top>
					<left>0</left>
					<width>auto</width>
					<height>60</height>
					<label>186</label>
					<font>Font27</font>
					<align>center</align>
					<texturefocus colordiffuse="$VAR[CategoryColor]">common/white.png</texturefocus>
					<texturenofocus colordiffuse="00FFFFFF">common/white.png</texturenofocus>
					<textcolor>$VAR[InitColor5]</textcolor>
					<focusedcolor>$VAR[InitColor4]</focusedcolor>
					<disabledcolor>$VAR[InitColor2]</disabledcolor>
					<invalidcolor>$VAR[InitColor2]</invalidcolor>
					<onclick>Back</onclick>
				</control>
				
				<!-- NO -->
				<control type="button" id="11">
					<top>0</top>
					<left>0</left>
					<width>auto</width>
					<height>60</height>
					<label>186</label>
					<font>Font27</font>
					<align>center</align>
					<texturefocus colordiffuse="$VAR[CategoryColor]">common/white.png</texturefocus>
					<texturenofocus colordiffuse="00FFFFFF">common/white.png</texturenofocus>
					<textcolor>$VAR[InitColor5]</textcolor>
					<focusedcolor>$VAR[InitColor4]</focusedcolor>
					<disabledcolor>$VAR[InitColor2]</disabledcolor>
					<invalidcolor>$VAR[InitColor2]</invalidcolor>
					<onclick>Back</onclick>					
				</control>				
			</control>
		</control>
	</controls>
</window>